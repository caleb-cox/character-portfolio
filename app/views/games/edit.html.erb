<h2>Edit Game</h2>

<div class="row">
  <div class="col-lg-3">
    <% if @game.errors.any? %>
      <% @game.errors.full_messages.each do |message| %>
      <div class=  "bg-warning text-danger">
        <b><%= message %></b>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-lg-3">
    <%= form_for @game do |f| %>
      <div class="form-group">
        <%= f.label :name %><br><%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :description %><br><%= f.text_area :description, size: "60x5"  %>
      </div>

      <%= f.submit class: 'btn btn-success'%> <%= link_to "Delete", confirm_delete_game_path, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>
