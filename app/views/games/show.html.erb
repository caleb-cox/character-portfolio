<h1><%= @game.name %></h1>

<h3><%= @game.description %></h3>

<% if @can_edit%>
<div>
  <h4>You are the Game Master</h4>
  <%= link_to "Edit This Game", edit_game_path(@game) %> ||
  <%= link_to "Delete", confirm_delete_game_path %>
</div>
<% elsif @user_character %>
  <h4>Your Character in this game</h4>
  <ul>
    <li><%= link_to @user_character.name, character_path(@user_character)%></li>
  </ul>
<% else %>
  <%= link_to "Join Game & Create a Character", new_character_path %>
<% end %>

<h4>Characters in this game</h4>
<ul>
  <% @game.characters.each do |character| %>
  <li><%= link_to character.name, character_path(character)%></li>
  <% end %>
</ul>

<h4>Average Attributes</h4>

<%= column_chart (@chart_info) %>
