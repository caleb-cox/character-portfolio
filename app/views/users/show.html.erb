<div class="row">
  <div class="col-lg-6">
    <h1>Welcome to The Shire <%= @user.name %>!</h1>
        <p><%= link_to "Edit profile", edit_user_path(@user.id), class:"btn btn-success" %>

    <% if !@games.empty? %>
      <h2>Choose An Adventure</h2>
      <% @games.each do |game| %>
        <h3><p><%= link_to game.name, game_path(game) %><br></p></h3>
        <%= game.description %><br>
      <% end %>

    <% else %>
      <h2><%= link_to "Choose An Adventure", games_path %></h2>

    <% end %>
        <h2>Or</h2>

    <h2><%= link_to "Make An Adventure", new_game_path %></h2>
  </div>
</div>
