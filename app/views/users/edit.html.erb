<div class="row">
  <div class="col-lg-6">

    <h1>Edit Your User Account</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
  <%= form_for @user do |f| %>
    <%=f.label :name %>
    <%=f.text_field :name %>
    <%=f.label :password, "New Password" %>
    <%=f.password_field :password %>
    <%= f.submit class:'btn btn-success' %>
  <% end %>
  </div>
</div>

  <p><%= link_to 'Delete Account', delete_path, class:'btn btn-danger' %></p>


